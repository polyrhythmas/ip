<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="diablo.ui.MainWindow"
            prefHeight="600.0" prefWidth="400.0"
            style="-fx-background-color: linear-gradient(to bottom, #2c3e50, #34495e);">

    <children>
        <!-- Scrollable Chat Area -->
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="AS_NEEDED"
                    prefHeight="557.0"
                    prefWidth="400.0"
                    style="-fx-background: transparent; -fx-border-color: transparent;"
                    AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.bottomAnchor="50.0">
            <content>
                <VBox fx:id="dialogContainer"
                      spacing="10"
                      fillWidth="true"
                      prefHeight="552.0"
                      prefWidth="388.0"
                      style="-fx-background-color: #ecf0f1; -fx-background-radius: 8;">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </VBox>

            </content>
        </ScrollPane>

        <!-- Input Bar -->
        <HBox spacing="5"
              prefHeight="41.0"
              style="-fx-background-color: #bdc3c7;"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
            <children>
                <TextField fx:id="userInput"
                           promptText="Type your message..."
                           onAction="#handleUserInput"
                           HBox.hgrow="ALWAYS"
                           style="-fx-background-radius: 20; -fx-padding: 0 10;" />
                <Button fx:id="sendButton"
                        text="Send"
                        onAction="#handleUserInput"
                        prefHeight="41.0"
                        prefWidth="76.0"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-background-radius: 20;" />
            </children>
        </HBox>
    </children>
</AnchorPane>



